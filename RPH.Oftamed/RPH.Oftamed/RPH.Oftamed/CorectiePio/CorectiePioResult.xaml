<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RPH.Oftamed.CorectiePioResult"
             Title="Corectie Pio"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <StackLayout Margin="10">
                    <Label Text="Rezultat: " FontSize="Large"/>
                    <Label x:Name="rezLabel" Font="Bold" FontSize="Large"/>
                    <Image HeightRequest="300" WidthRequest="217" Source="http://corectie-pio.ro/img/Bimatoprost%20Timolol%20RO%20(003).jpg" />
                    <Label x:Name="pioLabel" Text="Presiunea intraoculara(mmHg): " FontSize="Large" />
                    <Label x:Name="cctLabel" Text="Grosimea corneei(micrometri): " FontSize="Large" />
                </StackLayout>
            </ScrollView>
            
            <StackLayout VerticalOptions="EndAndExpand">
                <Button Text="Calcul nou" Clicked="CalculNou_Clicked"
                        BackgroundColor="Gray"
                        TextColor="White"
                        Margin="5" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
